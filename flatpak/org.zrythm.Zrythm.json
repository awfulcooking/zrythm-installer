            ]
        },
        {
            "name": "rubberband",
            "build-options": {
                "env": {
                    "Vamp_CFLAGS": " ",
                    "Vamp_LIBS": " "
                },
                "no-debuginfo": true
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "http://code.breakfastquay.com/attachments/download/34/rubberband-1.8.1.tar.bz2",
