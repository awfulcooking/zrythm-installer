            ],
            "cleanup": [
                "/bin",
                "/include",
                "/share/ladspa",
                "*.a",
                "*.so"
            ]
        },
        {
            "name": "reproc",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "env": {
                    "BUILD_SHARED_LIBS": "ON",
                    "REPROC_WARNINGS": "ON",
                    "REPROC_WARNINGS_AS_ERRORS": "ON",
                    "CFLAGS": "-fPIC"
                },
                "no-debuginfo": true
