                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/lsp-plugins/lsp-dsp-lib/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"lsp-dsp-lib-src-\" + $version + \".tar.gz\") | .browser_download_url"
                    }
                }
            ]
        },
        {
            "name": "rtaudio",
            "buildsystem": "meson",
            "config-opts": [
                "-Djack=disabled",
                "-Dalsa=disabled"
            ],
