        },
        {
            "name": "zrythm",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dflatpak=true",
                "-Dfallback_version=@ZRYTHM_PKG_SEMVER_VERSION@",
                "-Dtrial_ver=@TRIAL_TRUE_FALSE@",
                "-Dcheck_updates=true",
                "-Dinstaller_ver=true",
                "-Djack=enabled",
                "-Dalsa=disabled",
                "-Drtaudio=enabled"
            ],
            "build-options": {
                "env": {
                    "LIBRARY_PATH": "/app/lib"
                },
                "no-debuginfo": true
            },
            "post-install": [
                "install -d /app/extensions/Plugins"
