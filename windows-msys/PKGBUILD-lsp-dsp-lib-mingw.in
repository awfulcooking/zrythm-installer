_realname=lsp-dsp-lib
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver="@LSP_DSP_LIB_VER@"
pkgrel=1
arch=('any')
pkgdesc='lsp dsp lib'
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-pkg-config")
options=('strip' 'staticlibs')
license=("LGPL3")
url="https://github.com/lsp-plugins/lsp-dsp-lib"
source=("https://github.com/lsp-plugins/$_realname/archive/lsp-dsp-lib-$pkgver.zip")
sha256sums=('SKIP')

prepare() {
  rm -rf ${_realname}-${pkgver}
  mv ${_realname}-${_realname}-${pkgver} ${_realname}-${pkgver}
  cd ${_realname}-${pkgver}

  find . -type f -exec sed -i -e 's|$(MAKEFLAGS)||g' {} \;
}

build() {
  cd "${srcdir}/${_realname}-${pkgver}"

  make config PREFIX=${MINGW_PREFIX}
  cat ./.config.mk
  make fetch
  make
}

package() {
  cd "${srcdir}/${_realname}-${pkgver}"

  make DESTDIR=${pkgdir} install
}
