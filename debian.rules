#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	mkdir -p debian/build
	cd debian/build && PKG_CONFIG_PATH=/usr/lib/zrythm/lib/pkgconfig ../../../../meson/meson.py --prefix=/usr ../.. -Denable_tests=true -Dinstall_dseg_font=false -Dmanpage=true -Dbuildtype=release -Denable_ffmpeg=true -Denable_sdl=true -Denable_rtaudio=true -Denable_rtmidi=true -Denable_guile=true -Denable_carla=true

override_dh_auto_build:
	cd debian/build && ninja -v

override_dh_auto_test:
	echo test # cd debian/build && ninja test

override_dh_auto_install:
	cd debian/build && DESTDIR=${CURDIR}/debian/zrythm ninja install
	mkdir -p ${CURDIR}/debian/zrythm/usr/lib/zrythm/lib
	cp -R /usr/lib/zrythm/lib/carla ${CURDIR}/debian/zrythm/usr/lib/zrythm/lib/
